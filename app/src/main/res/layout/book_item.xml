<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_top"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/book_item_height"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_marginEnd="@dimen/margin_top"
            android:background="@android:color/darker_gray"
            android:layout_marginRight="@dimen/margin_top"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/margin_top"
            android:layout_marginEnd="@dimen/margin_top"
            android:gravity="center|left">

            <TextView
                style="@style/BookItemStyle"
                android:id="@+id/bookAuthor"
                android:text="@string/author"/>

            <TextView
                style="@style/BookItemStyle"
                android:id="@+id/bookTitle"
                android:text="@string/title"/>

            <TextView
                style="@style/BookItemStyle"
                android:id="@+id/publishedDate"
                android:text="@string/Published"/>

            <TextView
                style="@style/BookItemStyle"
                android:id="@+id/pageCount"
                android:text="@string/pageCount"/>

            <TextView
                style="@style/BookItemStyle"
                android:id="@+id/language"
                android:text="@string/language"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|left">

                <TextView
                    style="@style/BookItemStyle"
                    android:id="@+id/bookAuthor_text"
                    android:text="@string/placeholder"/>

                <TextView
                    style="@style/BookItemStyle"
                    android:id="@+id/bookTitle_text"
                    android:text="@string/placeholder"/>

                <TextView
                    style="@style/BookItemStyle"
                    android:id="@+id/publishedDate_text"
                    android:text="@string/placeholder"/>

                <TextView
                    style="@style/BookItemStyle"
                    android:id="@+id/pageCount_text"
                    android:text="@string/placeholder"/>

                <TextView
                    style="@style/BookItemStyle"
                    android:id="@+id/language_text"
                    android:text="@string/placeholder"/>

            </LinearLayout>

    </LinearLayout>

</LinearLayout>
</LinearLayout>