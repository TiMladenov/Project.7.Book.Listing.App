<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/margin_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/book_item_height"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bookImage"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_marginEnd="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_top"
            android:background="@color/foreground_color"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_top"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookAuthor"
                style="@style/BookItemStyle"
                android:text="@string/author" />

            <TextView
                android:id="@+id/bookTitle"
                style="@style/BookItemStyle"
                android:text="@string/title" />

            <TextView
                android:id="@+id/publishedDate"
                style="@style/BookItemStyle"
                android:text="@string/Published" />

            <TextView
                android:id="@+id/pageCount"
                style="@style/BookItemStyle"
                android:text="@string/pageCount" />

            <TextView
                android:id="@+id/language"
                style="@style/BookItemStyle"
                android:text="@string/language" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bookAuthor_text"
                    style="@style/BookItemStyle"
                    android:text="@string/placeholder" />

                <TextView
                    android:id="@+id/bookTitle_text"
                    style="@style/BookItemStyle"
                    android:text="@string/placeholder" />

                <TextView
                    android:id="@+id/publishedDate_text"
                    style="@style/BookItemStyle"
                    android:text="@string/placeholder" />

                <TextView
                    android:id="@+id/pageCount_text"
                    style="@style/BookItemStyle"
                    android:text="@string/placeholder" />

                <TextView
                    android:id="@+id/language_text"
                    style="@style/BookItemStyle"
                    android:text="@string/placeholder" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>